@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<!-- Page Heading -->
<div class="row justify-content-between">
    <div class="col-lg-12">
           <h1 class="h3 mb-4 text-gray-800">Brands Page</h1>
    </div>
    <div class="col-lg-1">
        <a asp-controller="brand" asp-area="manage" asp-action="create" class="btn btn-primary">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped" >
           <thead>
               <tr>
                   <th> №</th>
                   <th>Name </th>
                   <th> Setting </th>
               </tr>
           </thead>
           <tbody>
               @foreach (Brand brand in Model)
               {
                   <tr>
                       <td> @counter </td>
                       <td>@brand.Name</td>
                       <td>
                           <a class="btn btn-warning">Update</a>
                           <a class="btn btn-danger">Delete</a>
                           <a class="btn btn-primary">Detail</a>
                       </td>

                   </tr>
                   counter++;
               }
           </tbody>
        </table>
    </div> 
</div>
